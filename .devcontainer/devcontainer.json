{
  "name": "Homelab Infrastructure",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/go:1": { "version": "latest" },
    "ghcr.io/devcontainers/features/python:1": { "version": "3.12" },
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/terraform:1": { "version": "latest", "tflint": "latest" },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": { "version": "latest", "helm": "latest", "minikube": "none" },
    "ghcr.io/devcontainers/features/docker-in-docker:2": { "version": "latest" }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "redhat.ansible",
        "redhat.vscode-yaml",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "tim-koehler.helm-intellisense",
        "golang.go",
        "ms-python.python",
        "esbenp.prettier-vscode",
        "davidanson.vscode-markdownlint"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "[terraform]": { "editor.defaultFormatter": "hashicorp.terraform" },
        "[go]": { "editor.defaultFormatter": "golang.go" },
        "go.lintTool": "golangci-lint",
        "go.lintOnSave": "workspace"
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,readonly"
  ],
  "remoteEnv": {
    "KUBECONFIG": "${containerWorkspaceFolder}/kubeconfig",
    "EDITOR": "nano"
  }
}
